<div class='container'>
    <div class='mt-4'>
        <h3>Đăng khóa học</h3>
        <form method='POST' action='/courses/store'>
            <div class='form-group mt-3'>
                <label class='mb-1' for='name'>Tên khóa học</label>
                <input type='text' class='form-control' id='name' name='name' />
            </div>
            <div class='form-group mt-3'>
                <label class='mb-1' for='description'>Mô tả</label>
                <input type='text' class='form-control' id='description' name='description' />
            </div>
            <div class='form-group mt-3'>
                <label class='mb-1' for='videoId'>Video ID</label>
                <input type='text' class='form-control' id='videoId' name='videoId' />
            </div>
            <div class='form-group mt-3'>
                <label class='mb-1' for='level'>Giá khóa học</label>
                <input type='text' class='form-control' id='price' name='price' />
            </div>

            <div class='form-group mt-3'>
                <label class='mb-1' for='level'>Trình độ</label>
                <input type='text' class='form-control' id='level' name='level' />
            </div>
            <button type='submit' class='btn btn-primary mt-3'>Thêm khóa học</button>
        </form>
    </div>
</div>