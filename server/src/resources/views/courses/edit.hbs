<div class='container'>
    <div class='mt-4'>
        <h3>Update Course</h3>
        <form method='POST' action='/courses/{{ courses._id }}?_method=PUT'>
            <div class='form-group mt-3'>
                <label class='mb-1' for='name'>Tên khóa học</label>
                <input type='text' class='form-control' id='name' name='name' value='{{courses.name}}' />
            </div>
            <div class='form-group mt-3'>
                <label class='mb-1' for='description'>Mô tả</label>
                <textarea
                    class='form-control'
                    id='description'
                    name='description'
                >{{courses.description}}</textarea>
                </div>

            </div>
            <div class='form-group mt-3'>
                <label class='mb-1' for='videoId'>Video ID</label>
                <input type='text' class='form-control' id='videoId' name='videoId' value='{{courses.videoId}}' />
            </div>
            <div class='form-group mt-3'>
                <label class='mb-1' for='level'>Giá khóa học</label>
                <input type='text' class='form-control' id='price' name='price' value='{{courses.price}}' />
            </div>

            <div class='form-group mt-3'>
                <label class='mb-1' for='level'>Trình độ</label>
                <input type='text' class='form-control' id='level' name='level' value='{{courses.level}}' />
            </div>
            <button type='submit' class='btn btn-primary mt-3'>Save</button>
        </form>
    </div>
</div>